<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyWrapped" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify_green</item>
        <item name="colorPrimaryVariant">@color/spotify_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/spotify_black</item>
        <item name="android:navigationBarColor">@color/spotify_black</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SpotifyWrapped.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SpotifyWrapped.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/spotify_green</item>
    </style>

    <style name="Theme.SpotifyWrapped.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>