<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/spotify_dark_green"/> <!-- Gray color when pressed -->
            <corners android:radius="15dp"/> <!-- Optional: radius for rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spotify_green"/> <!-- Default color -->
            <corners android:radius="15dp"/> <!-- Optional: radius for rounded corners -->
        </shape>
    </item>
</selector>