<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- Define shape as a rectangle -->
    <solid android:color="@color/spotify_green"/> <!-- Background color -->

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="50dp"/>

    <!-- Optional: Define a border -->
    <stroke
        android:width="0dp"
        android:color="#000000"/>

    <!-- Optional: Define padding if necessary -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>