<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/matchinghometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spotify_font"
        android:text="@string/matching_game_home"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/spotify_black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/matchingTimeFrameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spotify_font"
                android:text="Select your tile timeframe:"
                android:textAlignment="center"
                android:textColor="@color/spotify_black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/matchingShortTermBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/spotify_black"
                    android:fontFamily="@font/spotify_font"
                    android:text="Short Term"
                    android:textColor="@color/spotify_black"
                    android:textColorLink="@color/spotify_green"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/matchingMediumTermBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/spotify_black"
                    android:fontFamily="@font/spotify_font"
                    android:text="Medium Term"
                    android:textColor="@color/spotify_black"
                    android:textColorLink="@color/spotify_green"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/matchingLongTermBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="@color/spotify_black"
                    android:fontFamily="@font/spotify_font"
                    android:text="Long Term"
                    android:textColor="@color/spotify_black"
                    android:textColorLink="@color/spotify_green"
                    android:textSize="18sp" />

            </RadioGroup>

            <Button
                android:id="@+id/matchingstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/spotify_font"
                android:text="BEGIN"
                android:textColor="@color/spotify_white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>