<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1af1b1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/matchingHomePattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.25"
        android:scaleType="center"
        app:srcCompat="@drawable/stripes_image"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-183dp" />

    <TextView
        android:id="@+id/matchinghometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/spotify_font"
        android:text="@string/matching_game_home"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/spotify_black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/matchinghomeimage"
                android:layout_width="338dp"
                android:layout_height="309dp"
                app:srcCompat="@drawable/category_fill" />

            <RadioButton
                android:id="@+id/longTermBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Long Term"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/mediumTermBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Medium Term"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/shortTermBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Short Term"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

            <Button
                android:id="@+id/matchingstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="START!" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>