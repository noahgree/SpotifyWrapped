<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:backgroundTint="@color/spotify_black"
    tools:context=".ui.gallery.AddWrapFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleAW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/spotify_font"
            android:text="New Wrap"
            android:textAlignment="textStart"
            android:textColor="@color/spotify_green"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/spotify_font"
            android:text="Name"
            android:textColor="@color/spotify_green"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/less_rounded_edit_text"
            android:fontFamily="@font/spotify_font"
            android:hint="Add a name"
            android:inputType="text"
            android:textColor="@color/spotify_black"
            android:textColorHint="@color/spotify_light_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/spotify_font"
            android:text="Time Frame"
            android:textColor="@color/spotify_green"
            android:textSize="24sp"
            android:textStyle="bold" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/shortTermBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Short Term"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/mediumTermBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Medium Term"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/longTermBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Long Term"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/spotify_font"
            android:text="Visibility"
            android:textColor="@color/spotify_green"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Public"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:buttonTint="@color/spotify_white"
                android:fontFamily="@font/spotify_font"
                android:text="Private"
                android:textColor="@color/spotify_white"
                android:textColorLink="@color/spotify_green"
                android:textSize="18sp" />

        </RadioGroup>

        <Button
            android:id="@+id/generateButton"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/spotify_font"
            android:text="Generate"
            android:textColor="@color/spotify_white"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/add_icon"
                app:tint="@color/spotify_darker_grey" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>