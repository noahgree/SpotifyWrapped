<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Gtitletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/spotify_font"
            android:text="Games"
            android:textAlignment="textStart"
            android:textColor="@color/spotify_green"
            android:textSize="48sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="48sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/matchCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_drawable"
                android:backgroundTint="@color/spotify_green"
                android:backgroundTintMode="add"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/spotify_black">

                <TextView
                    android:id="@+id/matchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/spotify_font"
                    android:text="Matching Game"
                    android:textColor="@color/spotify_white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/matchImage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/match" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scoreboardMatching"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="1.7"
                android:background="@drawable/rounded_corners_flat_top_drawable"
                android:backgroundTint="@color/spotify_light_green"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_drawable"
                        android:backgroundTint="@color/spotify_black"
                        android:backgroundTintMode="add"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mg1"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/spotify_font"
                            android:text="mm:ss"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/mgPlayer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/spotify_font"
                            android:maxLines="1"
                            android:text="PLAYER NAME"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_drawable"
                        android:backgroundTint="@color/spotify_black"
                        android:backgroundTintMode="add"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mg2"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/spotify_font"
                            android:text="mm:ss"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/mgPlayer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/spotify_font"
                            android:maxLines="1"
                            android:text="PLAYER NAME"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_drawable"
                        android:backgroundTint="@color/spotify_black"
                        android:backgroundTintMode="add"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mg3"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/spotify_font"
                            android:text="mm:ss"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/mgPlayer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/spotify_font"
                            android:maxLines="1"
                            android:text="PLAYER NAME"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp">

        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hangCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_drawable"
                android:backgroundTint="@color/spotify_green"
                android:backgroundTintMode="add"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hangName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/spotify_font"
                    android:text="Hangman"
                    android:textColor="@color/spotify_white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/hangImage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/download" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scoreboardHang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="1.7"
                android:background="@drawable/rounded_corners_flat_top_drawable"
                android:backgroundTint="@color/spotify_light_green"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_drawable"
                        android:backgroundTint="@color/spotify_black"
                        android:backgroundTintMode="add"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hm1"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/spotify_font"
                            android:text="mm:ss"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/hmPlayer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/spotify_font"
                            android:maxLines="1"
                            android:text="PLAYER NAME"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_drawable"
                        android:backgroundTint="@color/spotify_black"
                        android:backgroundTintMode="add"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hm2"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/spotify_font"
                            android:text="mm:ss"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/hmPlayer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/spotify_font"
                            android:maxLines="1"
                            android:text="PLAYER NAME"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_drawable"
                        android:backgroundTint="@color/spotify_black"
                        android:backgroundTintMode="add"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hm3"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/spotify_font"
                            android:text="mm:ss"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/hmPlayer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/spotify_font"
                            android:maxLines="1"
                            android:text="PLAYER NAME"
                            android:textAlignment="textStart"
                            android:textColor="@color/spotify_white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>