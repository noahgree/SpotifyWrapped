                android:layout_marginVertical="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/invisDateForSS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="15sp"
                    android:autoSizeMaxTextSize="48sp"
                    android:autoSizeMinTextSize="30sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:fontFamily="@font/spotify_font"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="@color/spotify_white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/wrappedsummaryback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:elevation="0dp"
                    app:backgroundTint="#000000"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:pressedTranslationZ="0dp"
                    app:srcCompat="?attr/actionModeCloseDrawable"
                    app:tint="@color/white" />

                <Button
                    android:id="@+id/wrappedSaveImage"
                    android:layout_width="115dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_button"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:fontFamily="@font/spotify_font"
                    android:text="Save"
                    android:textStyle="bold"
                    app:backgroundTint="@color/spotify_green"
                    app:borderWidth="0dp"
                    app:cornerRadius="10sp"
                    app:elevation="0dp"
                    app:icon="@drawable/image"
                    app:iconGravity="textStart"
                    app:pressedTranslationZ="0dp" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>