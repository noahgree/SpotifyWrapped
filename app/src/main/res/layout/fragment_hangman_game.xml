<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Hangman image -->

    <!-- Word to guess -->
    <ImageView
        android:id="@+id/imageViewHangman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/hangman" />

    <TextView
        android:id="@+id/textViewWordToGuess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Word to Guess"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <!-- Input field for guessing -->
    <EditText
        android:id="@+id/editTextGuess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="Enter your guess"
        android:inputType="text" />

    <!-- Button to submit guess -->
    <Button
        android:id="@+id/buttonSubmitGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:onClick="submitGuess"/>

</FrameLayout>
