<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c086fc"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.25"
            android:scaleType="center"
            app:srcCompat="@drawable/stripes_image" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/topsongexit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:layout_margin="15dp"
                android:clickable="true"
                android:elevation="0dp"
                android:rotationY="180"
                app:backgroundTint="@android:color/transparent"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:srcCompat="@android:drawable/ic_delete"
                app:tint="@color/spotify_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/topsongimage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/topSongIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/spotify_font"
                android:maxLines="2"
                android:text="Top Song"
                android:textAlignment="center"
                android:textColor="@color/spotify_black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topsong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:ellipsize="end"
                android:fontFamily="@font/spotify_font"
                android:maxLines="2"
                android:text="@string/top_song_placeholder"
                android:textAlignment="center"
                android:textColor="@color/spotify_black"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TSbottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/TSSaveImage"
                    android:layout_width="115dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:fontFamily="@font/spotify_font"
                    android:text="Save"
                    android:textStyle="bold"
                    app:backgroundTint="@color/spotify_green"
                    app:borderWidth="0dp"
                    app:cornerRadius="10sp"
                    app:elevation="0dp"
                    app:icon="@drawable/image"
                    app:iconGravity="textStart"
                    app:pressedTranslationZ="0dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/topsongnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:rotationY="180"
                    app:backgroundTint="#000000"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:pressedTranslationZ="0dp"
                    app:srcCompat="?attr/actionModeCloseDrawable"
                    app:tint="@color/white" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>